<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.secd.ium.roomium">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icona_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomePageActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".OrariActivity" />
        <activity android:name=".AuleActivity" />
        <activity android:name=".SegnalaActivity" />
        <activity android:name=".FeedbackActivity" />
        <activity
            android:name=".AvvisiActivity"
            android:label="@string/title_activity_avvisi"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DocenteActivity"
            android:label="@string/title_activity_docente"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PrenotaActivity" />
        <activity android:name=".AvvisiDocenteActivity" />
        <activity android:name=".AlertViewActivity" />
        <activity android:name=".TabellaOrariActivity"></activity>
    </application>

</manifest>